#include<iostream>
using namespace std;
int m = 10;// Global variable 
main()
{
	// Scope resolution program 
	cout<<"I am chirag sanchaniya "<<endl;
	cout<<"En_no    220130318030 "<<endl;
	cout<<"---------------------"<<endl;
	cout<<"value of Global variable is m & its value  ::  "<<::m;// scop resolution 
	return 0;
}
